[Application]
name=com.rechain.dapp
runtime=org.freedesktop.Platform/x86_64/23.08
sdk=org.freedesktop.Sdk/x86_64/23.08
command=rechainonline

[Context]
shared=network;ipc;
sockets=x11;wayland;pulseaudio;fallback-x11;
devices=all;
filesystems=xdg-download;

[Session Bus Policy]
com.rechain.dapp=own
org.freedesktop.Notifications=talk

[Environment]
LD_LIBRARY_PATH=/app/lib:/app/lib/plugins:$LD_LIBRARY_PATH

[Extension com.rechain.dapp.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=com.rechain.dapp.Debug;