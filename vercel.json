{
  "version": 2,
  "builds": [
    {
      "src": "scripts/vercel.sh",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    }
  ],
  "functions": {
    "api/**/*.rs": {
      "runtime": "vercel-rust@1.0.0"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "buildCommand": "bash scripts/vercel.sh",
  "outputDirectory": "build"
}
